# Server Configuration
NODE_ENV=development
PORT=3001
AUTH_MODE=development

# Database Configuration (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pe_manager
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Alternative: Use DATABASE_URL for connection string
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pe_manager

# Development User (used when AUTH_MODE=development)
DEV_USER_ID=dev-user-001
DEV_USER_NAME=Development User
DEV_USER_EMAIL=dev@example.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Frontend Configuration (VITE_ prefix for Vite to expose to browser)
VITE_API_URL=/api
VITE_AUTH_MODE=development
VITE_BACKEND_URL=http://localhost:3001
